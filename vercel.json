{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python"
        },
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/main.py"
        },
        {
            "src": "/auth/(.*)",
            "dest": "/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "/dist/$1"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
}